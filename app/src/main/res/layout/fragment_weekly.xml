<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/totalSteps"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="이번주 걸음 수"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pro_text1" />

   <TextView
       android:id="@+id/pro_text1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="5000"
       android:textSize="12dp"
       android:textStyle="bold"
       android:layout_marginBottom="10dp"
       app:layout_constraintTop_toBottomOf="@id/totalSteps"
       app:layout_constraintStart_toStartOf="@id/progressBar1"
       app:layout_constraintBottom_toTopOf="@id/progressBar1"
       />

    <TextView
        android:id="@+id/pro_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5000"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/totalSteps"
        app:layout_constraintStart_toStartOf="@id/progressBar2"
        app:layout_constraintBottom_toTopOf="@id/progressBar2"/>

    <TextView
        android:id="@+id/pro_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5000"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/totalSteps"
        app:layout_constraintStart_toStartOf="@id/progressBar3"
        app:layout_constraintBottom_toTopOf="@id/progressBar3"/>

    <TextView
        android:id="@+id/pro_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5000"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/totalSteps"
        app:layout_constraintStart_toStartOf="@id/progressBar4"
        app:layout_constraintBottom_toTopOf="@id/progressBar4"/>

    <TextView android:id="@+id/pro_text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5000"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/totalSteps"
        app:layout_constraintStart_toStartOf="@id/progressBar5"
        app:layout_constraintBottom_toTopOf="@id/progressBar5"/>

    <TextView android:id="@+id/pro_text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5000"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/totalSteps"
        app:layout_constraintStart_toStartOf="@id/progressBar6"
        app:layout_constraintBottom_toTopOf="@id/progressBar6"/>

    <TextView
        android:id="@+id/pro_text7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5000"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/totalSteps"
        app:layout_constraintStart_toStartOf="@id/progressBar7"
        app:layout_constraintBottom_toTopOf="@id/progressBar7"/>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="35dp"
        android:layout_height="300dp"
        android:layout_marginStart="20dp"
        android:progressDrawable="@drawable/bar_type_progress_bar"
        app:layout_constraintEnd_toStartOf="@id/progressBar2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pro_text1"
        app:layout_constraintBottom_toTopOf="@id/bottomView"/>

    <ProgressBar
        android:id="@+id/progressBar2"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="35dp"
        android:layout_height="300dp"
        android:layout_marginStart="10dp"
        android:progressDrawable="@drawable/bar_type_progress_bar"
        app:layout_constraintStart_toEndOf="@id/progressBar1"
        app:layout_constraintEnd_toStartOf="@id/progressBar3"
        app:layout_constraintTop_toTopOf="@id/progressBar1"
        app:layout_constraintBottom_toTopOf="@id/bottomView"
        />


    <ProgressBar
        android:id="@+id/progressBar3"
        android:layout_width="35dp"
        android:layout_height="300dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/bar_type_progress_bar"
        app:layout_constraintStart_toEndOf="@id/progressBar2"
        app:layout_constraintEnd_toStartOf="@id/progressBar4"
        app:layout_constraintTop_toTopOf="@id/progressBar1"
        app:layout_constraintBottom_toTopOf="@id/bottomView"
        android:layout_marginStart="10dp"
        />

    <ProgressBar
        android:id="@+id/progressBar4"
        android:layout_width="35dp"
        android:layout_height="300dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/bar_type_progress_bar"
        app:layout_constraintStart_toEndOf="@id/progressBar3"
        app:layout_constraintEnd_toStartOf="@id/progressBar5"
        app:layout_constraintTop_toTopOf="@id/progressBar1"
        app:layout_constraintBottom_toTopOf="@id/bottomView"
        android:layout_marginStart="10dp"

        />

    <ProgressBar
        android:id="@+id/progressBar5"
        android:layout_width="35dp"
        android:layout_height="300dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/bar_type_progress_bar"
        app:layout_constraintStart_toEndOf="@id/progressBar4"
        app:layout_constraintEnd_toStartOf="@id/progressBar6"
        app:layout_constraintTop_toTopOf="@id/progressBar1"
        app:layout_constraintBottom_toTopOf="@id/bottomView"
        android:layout_marginStart="10dp"
        />

    <ProgressBar
        android:id="@+id/progressBar6"
        android:layout_width="35dp"
        android:layout_height="300dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/bar_type_progress_bar"
        app:layout_constraintStart_toEndOf="@id/progressBar5"
        app:layout_constraintEnd_toStartOf="@id/progressBar7"
        app:layout_constraintTop_toTopOf="@id/progressBar1"
        app:layout_constraintBottom_toTopOf="@id/bottomView"
        android:layout_marginStart="10dp"
        />

 <ProgressBar
     android:id="@+id/progressBar7"
     style="@style/Widget.AppCompat.ProgressBar.Horizontal"
     android:layout_width="35dp"
     android:layout_height="300dp"
     android:layout_marginStart="10dp"
     android:layout_marginEnd="20dp"
     android:max="100"
     android:progressDrawable="@drawable/changed_progress"
     app:layout_constraintBottom_toTopOf="@id/bottomView"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toEndOf="@id/progressBar6"
     app:layout_constraintTop_toTopOf="@id/progressBar1"
     app:layout_constraintVertical_bias="0.508" />

 <View android:id="@+id/bottomView"
     android:layout_width="match_parent"
     android:layout_height="50dp"
     app:layout_constraintTop_toBottomOf="@id/progressBar3"
     app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>