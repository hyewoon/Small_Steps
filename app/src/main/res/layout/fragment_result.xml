<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultFragment">

    <TextView
        android:id="@+id/weeklySteps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="이번주 걸음수"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1"/>

    <TextView
        android:id="@+id/thisWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이번주"
        app:layout_constraintStart_toStartOf="@id/weeklySteps"
        app:layout_constraintTop_toBottomOf="@id/weeklySteps"
        app:layout_constraintHorizontal_weight="1"/>

    <TextView
        android:id="@+id/sunday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="일"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/monday"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/thisWeek"
        app:layout_constraintHorizontal_weight="1"/>

    <TextView
        android:id="@+id/monday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="월"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/tuesday"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/sunday"
        app:layout_constraintTop_toTopOf="@id/sunday"
        app:layout_constraintHorizontal_weight="1"/>

    <TextView
        android:id="@+id/tuesday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="화"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/wednesday"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/monday"
        app:layout_constraintTop_toTopOf="@id/sunday"
        app:layout_constraintHorizontal_weight="1"/>

    <TextView
        android:id="@+id/wednesday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="수"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/thursday"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tuesday"
        app:layout_constraintTop_toTopOf="@id/sunday"
        app:layout_constraintHorizontal_weight="1"/>

    <TextView
        android:id="@+id/thursday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="목"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/friday"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/wednesday"
        app:layout_constraintTop_toTopOf="@id/sunday"
        app:layout_constraintHorizontal_weight="1"/>

    <TextView
        android:id="@+id/friday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="금"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/saturday"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/thursday"
        app:layout_constraintTop_toTopOf="@id/sunday"
        app:layout_constraintHorizontal_weight="1"/>

    <TextView
        android:id="@+id/saturday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="토"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/friday"
        app:layout_constraintTop_toTopOf="@id/sunday"
        app:layout_constraintHorizontal_weight="1"/>

    <SeekBar
        android:id="@+id/seekbar_sun"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="180dp"
        android:max="3000"
        android:progress="100"
        android:progressDrawable="@drawable/custom_seekbar_progress"
        android:rotation="270"
        android:splitTrack="false"
        android:thumb="@drawable/custom_seekbar_thumb"
        android:thumbOffset="12dp"
        android:translationX="-160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/sunday"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekbar_mon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="180dp"
        android:max="3000"
        android:progress="100"
        android:progressDrawable="@drawable/custom_seekbar_progress"
        android:rotation="270"
        android:splitTrack="false"
        android:thumb="@drawable/custom_seekbar_thumb"
        android:thumbOffset="12dp"
        android:translationX="-110dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/sunday"/>

    <SeekBar
        android:id="@+id/seekbar_tue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="180dp"
        android:max="3000"
        android:progress="100"
        android:progressDrawable="@drawable/custom_seekbar_progress"
        android:rotation="270"
        android:splitTrack="false"
        android:thumb="@drawable/custom_seekbar_thumb"
        android:thumbOffset="12dp"
        android:translationX="-55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/sunday"/>



    <SeekBar
        android:id="@+id/seekbar_wed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="180dp"
        android:max="3000"
        android:progress="100"
        android:progressDrawable="@drawable/custom_seekbar_progress"
        android:rotation="270"
        android:splitTrack="false"
        android:thumb="@drawable/custom_seekbar_thumb"
        android:thumbOffset="12dp"
        android:translationX="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/sunday"/>

    <SeekBar
        android:id="@+id/seekbar_thu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="180dp"
        android:max="5000"
        android:progress="100"
        android:progressDrawable="@drawable/custom_seekbar_progress"
        android:rotation="270"
        android:splitTrack="false"
        android:thumb="@drawable/custom_seekbar_thumb"
        android:thumbOffset="12dp"
        android:translationX="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/sunday"/>
    <SeekBar
        android:id="@+id/seekbar_fri"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="180dp"
        android:max="3000"
        android:progress="100"
        android:progressDrawable="@drawable/custom_seekbar_progress"
        android:rotation="270"
        android:splitTrack="false"
        android:thumb="@drawable/custom_seekbar_thumb"
        android:thumbOffset="12dp"
        android:translationX="110dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/sunday"/>
    <SeekBar
        android:id="@+id/seekbar_sat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="180dp"
        android:max="3000"
        android:progress="100"
        android:progressDrawable="@drawable/custom_seekbar_progress"
        android:rotation="270"
        android:splitTrack="false"
        android:thumb="@drawable/custom_seekbar_thumb"
        android:thumbOffset="12dp"
        android:translationX="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/sunday"/>


</androidx.constraintlayout.widget.ConstraintLayout>